        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableLayout
            android:id="@+id/tableLessions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TableLayout>

    </LinearLayout>


</LinearLayout>